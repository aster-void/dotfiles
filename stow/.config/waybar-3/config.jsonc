{
  "layer": "top",
  "position": "top", // Waybar position (top|bottom|left|right)
  "height": 24,
  "margin": "0 0 0 0",
  //"width": 1350, // Waybar width
  // Choose the order of the modules idle_inhibitor
  "modules-left": [
    "custom/launcher",
    "hyprland/workspaces",
    "hyprland/mode",
    "custom/cava-bar",
    "custom/player#prev",
    "custom/player#play",
    "custom/player#next",
    "custom/player#main"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "tray",
    "cpu",
    "memory",
    "temperature",
    "battery",
    "network",
    "pulseaudio",
    "bluetooth",
    "backlight",
    "clock#date",
    "clock#clock",
    "custom/power"
  ],
  // Modules configuration
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "format": "{name}",
    "format-icons": {
      "active": "‚óè",
      "default": "‚óØ"
    }
  },
  "custom/player#main": {
    "exec": "playerctl metadata --format '{{ title }}' 2>/dev/null || echo ''",
    "interval": 5,
    "max-length": 50
  },
  "custom/player#prev": {
    "format": "ÔÅà",
    "on-click": "playerctl previous"
  },
  "custom/player#play": {
    "exec": "playerctl status 2>/dev/null || echo 'Stopped'",
    "interval": 2,
    "on-click": "playerctl play-pause",
    "format": "{}"
  },
  "custom/player#next": {
    "format": "ÔÅë",
    "on-click": "playerctl next"
  },
  "custom/cava-bar": {
    "exec": "sh ~/.config/waybar/modules/cava.sh",
    "format": "{}",
    "tooltip": false,
    "on-click": "reload waybar",
    "layer": "below",
    "output": "all"
  },
  "hyprland/window": {
    "format": "{}",
    "max-length": 50
  },
  "tray": {
    "icon-size": 14,
    "spacing": 5
  },
  "clock#clock": {
    // %I: hour (12hr) %H: hour (24hr)
    // %M: Minute %p: AM/PM
    "format": "{:%I:%M %p}"
  },
  // date
  "clock#date": {
    "tooltip-format": "<span size='x-large'><b>üåü {calendar} üåü</b></span>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#c6a0f6' size='large' weight='bold'>   {}   </span>",
        "days": "<span color='#b7bdf8' size='medium' weight='normal'> {} </span>",
        "weeks": "<span color='#91d7e3' size='small' weight='bold'>W{}</span>",
        "weekdays": "<span color='#eed49f' size='medium' weight='bold'> {} </span>",
        "today": "<span color='#f5a97f' size='medium' weight='bold'> {} </span>"
      }
    },
    "actions": {
      "on-click": "shift_down",
      "on-click-right": "shift_up",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    },
    // %Y: Year %m: Month %d: Date
    "format": "{:%b %d / %a}", //12 hour format
    // "format": "ÔÑ≥ {:%d %m %Y ÔÄó %H:%M}", //24 hour format
    // //"timezones": [ "Kolkata" ],
    // //"max-length": 200
    "interval": 60
  },
  // "clock": {
  //     "format": "ÔÑ≥  {:%H:%M:%S}",
  //     "format-alt": "ÔÑ≥  {:%A, %B %d, %Y (%R)}",
  //     "tooltip-format": "<tt><small>{calendar}</small></tt>",
  //     "calendar": {
  //         "mode"          : "month",
  //         "mode-mon-col"  : 3,
  //         "weeks-pos"     : "right",
  //         "on-scroll"     : 1,
  //         "on-click-right": "mode",
  //         "format": {
  //             "months":     "<span color='#ffead3'><b>{}</b></span>",
  //             "days":       "<span color='#ecc6d9'><b>{}</b></span>",
  //             "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
  //             "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
  //             "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
  //         }
  //     },
  //     "actions": {
  //         "on-click-right": "mode",
  //         "on-click-forward": "tz_up",
  //         "on-click-backward": "tz_down",
  //         "on-scroll-up": "shift_up",
  //         "on-scroll-down": "shift_down"
  //     },
  //     "interval": 1
  // },
  "cpu": {
    "format": "Ôíº{usage: >3}%",
    "on-click": "alacritty --option font.size=8 -e btop",
    "tooltip-format": "CPU Usage: {usage}%\\nLoad: {load}\\nClick to open btop"
  },
  "memory": {
    "format": "Ôî∏{: >3}%",
    "on-click": "alacritty --option font.size=8 -e btop",
    "tooltip-format": "Memory Usage: {percentage}%\\nUsed: {used}GiB / {total}GiB\\nAvailable: {avail}GiB\\nClick to open btop"
  },
  "temperature": {
    // "thermal-zone": 2,
    "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
    "critical-threshold": 80,
    "on-click": "alacritty --option font.size=8 -e btop",
    // "format-critical": "{temperatureC}¬∞C Ôãá",
    "format": "Ôãâ {temperatureC}¬∞C"
  },
  "backlight": {
    // "device": "acpi_video1",
    "format": "{icon} {percent: >3}%",
    "format-icons": [
      "Ôî¢",
    ],
    "on-scroll-up": "brightnessctl set +2%",
    "on-scroll-down": "brightnessctl set 2%-",
    "tooltip-format": "Brightness: {percent}%\\nScroll to adjust"
  },
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity: >3}%",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ]
    //"format-icons": ["Ôñç", "Ôïπ", "Ôïª", "Ôïº", "ÔïΩ", "Ôïæ", "Ôïø", "ÔñÄ", "ÔñÅ", "Ôï∏"]
  },
  "bluetooth": {
    "format": " {status}",
    "format-disabled": "",
    "format-off": "",
    "format-on": "",
    "format-connected": " {device_alias}",
    "format-connected-battery": " {device_alias} ({device_battery_percentage}%)",
    "tooltip-format": "Bluetooth: {status}\\nConnected devices: {num_connections}",
    "tooltip-format-connected": "Bluetooth: {status}\\nConnected: {device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}",
    "tooltip-format-enumerate-connected-battery": "{device_alias} ({device_battery_percentage}%)",
    "on-click": "blueman-manager"
  },
  "network": {
    // "interface": "wlp2s0", // (Optional) To force the use of this interface
    "format": "‚ö† Disabled",
    "format-wifi": "Ôá´  {essid}",
    // "format-ethernet": "ÔÉÅ {ifname}: {ipaddr}/{cidr}",
    "format-ethernet": "ÔÉÅ  Wired",
    "format-disconnected": "‚ö†  Disconnected",
    // "on-click": "alacritty -e nmtui"
    "on-click": "nm-connection-editor"
  },
  "pulseaudio": {
    "scroll-step": 1,
    "format": "{icon} {volume: >3}%",
    "format-bluetooth": "{icon} {volume: >3}%",
    "format-muted": "ÔÄ¶ muted",
    "format-icons": {
      "headphones": "ÔÄ•",
      "handsfree": "ÔÄ•",
      "headset": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": [
        "ÔÄß",
        "ÔÄ®"
      ]
    },
    "on-click": "pavucontrol"
    // "on-scroll-up": "pamixer -ui 2 && pamixer --get-volume > $SWAYSOCK.wob",
    // "on-scroll-down": "pamixer -ud 2 && pamixer --get-volume > $SWAYSOCK.wob"
  },
  "custom/power": {
    "format": "‚èª",
    "on-click": "nwgbar",
    "tooltip": false
  },
  "custom/keyboard-layout": {
    // "exec": "swaymsg -t get_inputs | grep -m1 'xkb_active_layout_name' | cut -d '\"' -f4",
    // Interval set only as a fallback, as the value is updated by signal
    "interval": 1,
    "format": "ÔÑú  {}", // Icon: keyboard
    // Signal sent by Sway key binding (~/.config/sway/key-bindings)
    "signal": 1, // SIGHUP
    "tooltip": false,
    "on-click": "~/.config/waybar/scripts/keyhint.sh"
  },
  "custom/launcher": {
    "format": "Ôåì ",
    "on-click": "exec nwg-drawer -c 7 -is 70 -spacing 23",
    "tooltip": false
  }
}
