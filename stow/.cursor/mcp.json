{
  "mcpServers": {
    "nixos": {
      "command": "mcp-nixos"
    },
    "serena": {
      "command": "serena",
      "args": [
        "start-mcp-server"
      ]
    },
    "filesystem": {
      "command": "mcp-server-filesystem",
      "args": [
        "${workspaceFolder}"
      ]
    },
    "svelte": {
      "url": "https://mcp.svelte.dev/mcp"
    },
    "chrome-devtools": {
      "command": "chrome-devtools-mcp"
    }
  }
}
